# EditorConfig - Define e mantém estilos de codificação consistentes
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# Configurações gerais para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Arquivos Kotlin
[*.{kt,kts}]
indent_size = 4
max_line_length = 120
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

# Arquivos XML (layouts Android, manifests, etc)
[*.xml]
indent_size = 4
ij_xml_block_comment_at_first_column = false
ij_xml_line_comment_at_first_column = false

# Arquivos Gradle
[*.gradle]
indent_size = 4

[*.gradle.kts]
indent_size = 4

# Arquivos de configuração
[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Properties files
[*.properties]
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf
